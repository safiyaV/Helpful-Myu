{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "./dist/",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "removeComments": true,
        "typeRoots": ["node_modules/@types", "src/types"],
        "baseUrl": ".",
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/*", "public/*"]
}
